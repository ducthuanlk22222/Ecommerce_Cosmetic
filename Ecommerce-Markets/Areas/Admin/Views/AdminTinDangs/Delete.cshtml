
@model Ecommerce_Markets.Models.TinDang

@{
    ViewData["Title"] = "Xác nhận xóa bài viết này?";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-area="Admin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminTinDangs" asp-area="Admin" asp-action="Index"></a>
            <span class="breadcrumb-item active">Thông tin của trang</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">TỔNG QUAN</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-edit-option">HÌNH ẢNH</a>
        </li>
    </ul>
</div>
<div class="tab-content m-t-15">
    <div class="tab-pane fade show active" id="product-edit-basic">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">XÁC NHẬN XÓA BÀI VIẾT : @Model.Title.ToUpper()</h4>
                <div class="table-responsive">
                    <form asp-action="Delete" asp-route-id="@Model.PostId">
                        <input type="hidden" asp-for="PostId" />
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Tên trang:</td>
                                    <td class="text-dark font-weight-semibold">@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Alias:</td>
                                    <td>@Model.Alias</td>
                                </tr>
                                <tr>
                                    <td>Trạng thái:</td>
                                    <td>
                                        @if (Model.Published == true)
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="badge badge-success badge-dot m-r-10"></div>
                                                <div>Published</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="badge badge-danger badge-dot m-r-10"></div>
                                                <div>Not published</div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Xác nhận xóa trang</td>
                                    <td>
                                        <div class="checkbox">
                                            <input type="submit" value="Xác nhận xóa" class="btn btn-danger"/>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h6>THÔNG TIN MÔ TẢ</h6>
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>Mô tả: </td>
                            <td class="text-dark font-weight-semibold">@Model.Contents</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="product-edit-option">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label class="font-weight-semibold" for="productSize">Tiêu đề: </label>
                    @Model.Title
                </div>
                <div class="form-group">
                    <img width="15%" height="15%" src="~/images/posts/@Model.Thumb" alt="@Model.Title" />
                </div>
            </div>
        </div>
    </div>
    <div>
        <a class="btn btn-success m-r-5" asp-action="Index">Quay lại</a>
    </div>
</div>
